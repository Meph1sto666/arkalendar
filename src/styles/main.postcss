@import './themes/dark.postcss';
@import '@skeletonlabs/skeleton/styles/skeleton.css';

.container-aside {
	min-width: 20rem;
	max-width: 170rem;
	@apply
	p-3
	w-2/3
}

.nav-card {
	@apply
	overflow-hidden
	card
	card-hover
	p-3
}

#cal-preview {
	@apply
	w-1/3
}

#events-nav-card {
	grid-area: 1 / 1 / 2 / 3;
}
#birdays-nav-card {
	grid-area: 2 / 1 / 3 / 2;
}
#headhunting-nav-card {
	grid-area: 2 / 2 / 3 / 3;
}